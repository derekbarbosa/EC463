#include <msp430.h> 


/**
 * main.c
 */
int main(void)
{
    WDTCTL = WDTPW | WDTHOLD;

    HAL_System_Init();
    HAL_IO_InitButtons();
    initRtc();
    initAdc();

    P1OUT ^= BIT1;
    __delay_cycles(16000000);
    P1OUT ^= BIT1;
    __delay_cycles(16000000);
    P1OUT ^= BIT1;
    __delay_cycles(16000000);
    P1OUT ^= BIT1;

    unsigned int select = 0;

    while(1){
        if((P1IN & BIT3)!=BIT3)
        {
            __delay_cycles(220000);
            P1OUT ^= BIT0;
            select++;
        }
    }
	return 0;
}
